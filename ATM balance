import java.util.Scanner;
public class ATMBalance {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Define the denominations
        int[] denominations = {2000, 500, 200, 100};
        int[] notes = new int[4];
        int[] priority = new int[4];

        System.out.println("Enter the priority of denominations (1 for highest, 4 for lowest):");
        for (int i = 0; i < 4; i++) {
            System.out.print("Priority for denomination " + denominations[i] + ": ");
            priority[i] = scanner.nextInt();
        }

        System.out.println("Enter the number of notes for each denomination:");
        for (int i = 0; i < 4; i++) {
            System.out.print("Number of notes for denomination " + denominations[i] + ": ");
            notes[i] = scanner.nextInt();
        }

        // Sort denominations and notes according to priority
        for (int i = 0; i < priority.length - 1; i++) {
            for (int j = i + 1; j < priority.length; j++) {
                if (priority[i] > priority[j]) {
                    // Swap priority
                    int tempPriority = priority[i];
                    priority[i] = priority[j];
                    priority[j] = tempPriority;

                    // Swap denominations
                    int tempDenomination = denominations[i];
                    denominations[i] = denominations[j];
                    denominations[j] = tempDenomination;

                    // Swap notes
                    int tempNotes = notes[i];
                    notes[i] = notes[j];
                    notes[j] = tempNotes;
                }
            }
        }

        // Calculate the total amount
        int totalAmount = 0;
        for (int i = 0; i < 4; i++) {
            totalAmount += denominations[i] * notes[i];
        }

        System.out.println("Total amount available in the ATM: " + totalAmount);

        scanner.close();
    }
}

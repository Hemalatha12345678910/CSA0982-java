// Student class
class Student {
    // Attributes of the Student class
    private String name;
    private String registerNumber;
    private int[] marks;
    private int total;
    private double average;

    // Constructor to initialize the student details
    public Student(String name, String registerNumber, int[] marks) {
        this.name = name;
        this.registerNumber = registerNumber;
        this.marks = marks;
        calculateTotalAndAverage();
    }

    // Method to calculate total and average
    private void calculateTotalAndAverage() {
        total = 0;
        for (int mark : marks) {
            total += mark;
        }
        average = total / (double) marks.length;
    }

    // Method to display student details
    public void displayDetails() {
        System.out.println("Student Name: " + name);
        System.out.println("Register Number: " + registerNumber);
        System.out.println("Marks: ");
        for (int i = 0; i < marks.length; i++) {
            System.out.println("Subject " + (i + 1) + ": " + marks[i]);
        }
        System.out.println("Total Marks: " + total);
        System.out.println("Average Marks: " + average);
    }
}

// Main class to test the Student class
public class Main {
    public static void main(String[] args) {
        // Example student details
        String studentName = "John Doe";
        String studentRegisterNumber = "REG12345";
        int[] subjectMarks = {85, 90, 78, 88, 92}; // Marks for five subjects

        // Create a Student object
        Student student = new Student(studentName, studentRegisterNumber, subjectMarks);

        // Display student details
        student.displayDetails();
    }
}

import java.util.Scanner;
public class SpecialCharacterCounter {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input the statement from the user
        System.out.print("Enter a statement: ");
        String statement = scanner.nextLine();
        
        // Define a regular expression for special characters
        String specialCharsRegex = "[^a-zA-Z0-9\\s]";
        
        // Count special characters
        int specialCharCount = 0;
        for (char ch : statement.toCharArray()) {
            if (Character.toString(ch).matches(specialCharsRegex)) {
                specialCharCount++;
            }
        }

        // Output the number of special characters
        System.out.println("Number of special characters: " + specialCharCount);
    }
}

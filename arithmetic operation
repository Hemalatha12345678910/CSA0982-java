public class ArithmeticOperations {
    public static void main(String[] args) {
        // Define some example numbers
        int num1 = 10;
        int num2 = 0; // This will be used to demonstrate division by zero

        try {
            // Perform arithmetic operations
            int sum = add(num1, 5);
            int difference = subtract(num1, 3);
            int product = multiply(num1, 4);
            int quotient = divide(num1, num2); // This will throw an exception

            // Display results
            System.out.println("Sum: " + sum);
            System.out.println("Difference: " + difference);
            System.out.println("Product: " + product);
            System.out.println("Quotient: " + quotient);

        } catch (ArithmeticException e) {
            // Handle division-by-zero exception
            System.out.println("Error: " + e.getMessage());
        }
    }

    // Method for addition
    public static int add(int a, int b) {
        return a + b;
    }

    // Method for subtraction
    public static int subtract(int a, int b) {
        return a - b;
    }

    // Method for multiplication
    public static int multiply(int a, int b) {
        return a * b;
    }

    // Method for division
    public static int divide(int a, int b) {
        if (b == 0) {
            throw new ArithmeticException("Division by zero is not allowed.");
        }
        return a / b;
    }
}

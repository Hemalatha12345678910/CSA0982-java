import java.util.Arrays;
import java.util.Scanner;

public class NthLargestNumber {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input size of the array
        System.out.println("Enter the number of elements in the array:");
        int size = scanner.nextInt();
        int[] array = new int[size];

        // Input array elements
        System.out.println("Enter the elements of the array:");
        for (int i = 0; i < size; i++) {
            array[i] = scanner.nextInt();
        }

        // Input N
        System.out.println("Enter the value of N to find the Nth largest number:");
        int N = scanner.nextInt();

        if (N > size || N <= 0) {
            System.out.println("Invalid value of N. It should be between 1 and the size of the array.");
            return;
        }

        // Sort the array in descending order
        Arrays.sort(array);
        int nthLargest = array[size - N];

        // Output the Nth largest number
        System.out.println("The " + N + "th largest number is: " + nthLargest);

        scanner.close();
    }
}

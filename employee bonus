import java.util.Scanner;

public class EmployeeBonus {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input salary and grade
        System.out.println("Enter the salary of the employee:");
        double salary = scanner.nextDouble();

        System.out.println("Enter the grade of the employee (A/B):");
        char grade = scanner.next().charAt(0);

        // Calculate bonus
        double bonus = 0;

        if (grade == 'A' || grade == 'a') {
            bonus = salary * 0.05;
        } else if (grade == 'B' || grade == 'b') {
            bonus = salary * 0.10;
        } else {
            System.out.println("Invalid grade entered.");
            return;
        }

        // Additional bonus for salary less than $10,000
        if (salary < 10000) {
            bonus += salary * 0.02;
        }

        double totalSalary = salary + bonus;

        // Output the bonus and total salary
        System.out.println("Bonus given: " + bonus);
        System.out.println("Total salary after bonus: " + totalSalary);

        scanner.close();
    }
}
